<div class="container-registro col-sm-8 text-center">
  <div class="card-registro">

    <div class="back-button-registro">
      <%= link_to :root, class: "back-registro" do %>
      <i class="fas fa-arrow-left"></i>
      <% end %>
    </div>

    <h2>Registre-se</h2>

    <div class="form-login-registro">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { controller: "mask datepicker"}} ) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :first_name, label: "Nome",
                      required: false %>
          <%= f.input :last_name, label: "Sobrenome",
                      required: false %>
          <%= f.input :birthday, label: "Data de nascimento",
                      as: :string,
                      required: false, input_html: {class: "datepicker"} %>
          <%= f.input :genre, collection: ['Masculino', 'Feminino'],
                                         label: "Gênero" %>
          <%= f.input :cpf,
                      required: false, input_html: { data: { action: "input->mask#inputmask", mask:"cpf" }, maxlength: 14 }, label: "CPF" %>
          <%= f.input :password, label: "Senha", placeholder: "•••••••",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirme a senha", placeholder: "•••••••",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="form-actions mt-4">
          <%= f.button :submit, "Registre-se", class:'btn-registro' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
